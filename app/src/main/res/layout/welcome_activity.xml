<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Login.WelcomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/img">
            <TextView
                android:id="@+id/tvXinChao"
                android:text="Welcome To Out App"
                android:layout_width="match_parent"
                android:textSize="35sp"
                android:gravity="center_horizontal"
                android:textColor="#EA4269"
                android:textStyle="bold"
                android:layout_height="130dp"
                android:paddingTop="40dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tvGioiThieu"
                android:text="Ứng dụng của chúng tôi cung cấp chức năng quản lý khách hàng, thống kê sản phẩm, lịch sử bán hàng..."
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="@color/white"
                android:lineHeight="32dp"
                android:layout_width="match_parent"
                android:background="#75111111"
                android:layout_marginTop="340dp"
                android:layout_height="130dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/btnDangKy"
                    android:text="Đăng ký"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#EA4269"/>
                <Button
                    android:id="@+id/btnDangNhap"
                    android:text="Đăng nhập"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginStart="60dp"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#EA4269"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>