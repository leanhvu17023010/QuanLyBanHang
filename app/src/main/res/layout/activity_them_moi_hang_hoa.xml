<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.HangHoa.ThemMoiHangHoaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgThemAnhHH"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/baseline_image_24" />
            <Button
                android:id="@+id/btnThemChonAnh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#4E6C92"
                android:text="Chọn hình ảnh"
                android:textColor="@android:color/white" />
            <EditText
                android:id="@+id/tvThemTenHH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Sửa tên hàng hóa"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tvThemGiaHH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:hint="đ Giá sản phẩm"
                android:textColor="#f55"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Đã bán "
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tvThemDaBan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Đã bán" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Tồn kho "
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tvThemTonKho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Tồn kho" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Chi tiết hàng hóa"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tvThemMoTaHH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Mô tả sản phẩm ..."
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvLoaiSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại sản phẩm:"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp" />


                    <Spinner
                        android:id="@+id/spnThemLoaiSP"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/loai_san_pham"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnHuyThemMoiHH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#4E6C92"
                    android:text="Hủy thêm mới " />

                <Button
                    android:id="@+id/btnThemMoiHH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:backgroundTint="#EA4269"
                    android:text="Thêm mới " />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>