<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Login.DangKyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/img">

            <TextView
                android:text="Đăng ký"
                android:textSize="42dp"
                android:textStyle="bold"
                android:textColor="#EA4269"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtTenTK"
                android:hint="Nhập tên tài khoản..."
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtEmailDK"
                android:hint="Nhập email..."
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:padding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtSDT"
                android:hint="Nhập số điện thoại..."
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:padding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtMatKhau"
                android:hint="Nhập mật khẩu..."
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:padding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtNgaySinh"
                android:hint="Nhập ngày sinh..."
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:padding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtDiaChi"
                android:hint="Nhập địa chỉ..."
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:padding="12dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:id="@+id/radGioiTinh"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#80333333"
                android:spacing="10dp">

                <RadioButton
                    android:id="@+id/radNam"
                    android:text="Nam"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginEnd="20dp"/>

                <RadioButton
                    android:id="@+id/radNu"
                    android:text="Nữ"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginStart="20dp"/>
            </RadioGroup>

            <Button
                android:id="@+id/btnDangKy"
                android:text="Đăng ký"
                android:textSize="20dp"
                android:backgroundTint="#EA4269"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_width="140dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvDaCoTK"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Bạn đã có tài khoản?"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnDangNhap"
                    android:text="Đăng nhập"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:backgroundTint="#0A36D7"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="180dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
